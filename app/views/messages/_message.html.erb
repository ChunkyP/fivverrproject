
<% if message.user == current_user %>
  <div class="chat-message-right mb-4" style="display:flex;flex-direction:row-reverse;">
    <div>
      <%= image_tag user_avatar(message.user, 80), class: "ui-w-40 rounded-circle" %>
      <div class="text-muted small text-nowrap mt-2"><%= message.created_at.strftime("%d/%m- %R") %></div>
    </div>
    <div class="flex-shrink-1 bg-lighter rounded py-2 px-3 mr-3" style="text-align:right">
      <div class="font-weight-semibold mb-1"><%= message.user.username %></div>
      <% if message.msg_type == "image" %>
        <%= link_to image_tag(message.avatar.url(:medium), height: '250', width: '300'), message.avatar.url, {target: '_blank'} %>
      <% else %>
        <%= message.message %>
      <% end %>
    </div>
  </div>
<%else%>

  <div class="chat-message-left mb-4" style="display:flex">
    <div>
    <%= image_tag user_avatar(message.user, 80), class: "ui-w-40 rounded-circle" %>
      <div class="text-muted small text-nowrap mt-2"><%= message.created_at.strftime("%d/%m- %R") %></div>
    </div>
    <div class="flex-shrink-1 bg-lighter rounded py-2 px-3 ml-3">
      <div class="font-weight-semibold mb-1"><%= message.user.username %></div>
      <% if message.msg_type == "image" %>
        <%= link_to image_tag(message.avatar.url(:medium), height: '250', width: '300'), message.avatar.url, {target: '_blank'}%>
      <% else %>
        <%= message.message %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="row">
  <% if message.user == current_user %>
    <% if message.msg_type == "text" %>
      <div class="col-12 mb-2">
        <div>
          <span class="current_user_name">
            <%= message.user.username %>
          </span>
          <span class="current_user_text">
            <%= message.message %>
          </span>
        </div>
        <p style="font-size:11px">
          <%= message.created_at.strftime("%d/%m/%Y - %R") %>
        </p>
      </div>
    <% else %>
      <div class="col-12 mb-2">
        <div>
          <span class="current_user_name">
            <%= message.user.username %>
          </span>
          <span>
            <%= image_tag message.avatar.url(:medium), alt: 'image', height: '250', width: '300', class: 'img img-thumbnail' %>
          </span>
        </div>
        <p style="font-size:11px">
          <%= message.created_at.strftime("%d/%m/%Y - %R") %>
        </p>
      </div>
    <% end %>
  <% else %>
    <% if message.msg_type == "text" %>
      <div class="col-12 mb-2">
        <div style="display: flex;justify-content: flex-end;">
          <span class="other_user_text float-right">
            <%= message.message %>
          </span>
          <span class="other_user_name">
            <%= message.user.username %>
          </span>
        </div>
        <br/>
        <br/>
        <p class="float-right" style="font-size:11px">
          <%= message.created_at.strftime("%d/%m/%Y - %R") %>
        </p>
      </div>
    <% else %>
      <div class="col-12 mb-z">
        <div style="display: flex;justify-content: flex-end;">
          <span class="float-right">
            <%= image_tag message.avatar.url(:medium), alt: 'image', height: '250', width: '300', class: 'img img-thumbnail' %>
          </span>
          <span class="other_user_name">
            <%= message.user.username %>
          </span>
        </div>
        <br/>
        <br/>
        <p class="float-right" style="font-size:11px">
          <%= message.created_at.strftime("%d/%m/%Y - %R") %>
        </p>
      </div>
    <% end %>
  <% end %>
</div>

<% content_for :styles do %>
  <%= stylesheet_pack_tag 'vendor/libs/select2/select2', media: 'all' %>
  <!-- Page -->
<% end %>

<% content_for :scripts do %>
  <!-- Dependencies -->
  <%= javascript_pack_tag 'vendor/libs/select2/select2' %>
  <%= javascript_pack_tag 'vendor/libs/vanilla-text-mask/text-mask-addons' %>
<% end %>

<h4 class="font-weight-bold py-3 mb-4">
  <span class="text-muted"><%= current_user.username %></span>
</h4>

<div class="nav-tabs-top">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#user-edit-account">Account</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#user-edit-info">Privatdaten</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#notice">Notizen</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade show active" id="user-edit-account">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="card-body">

          <div class="media align-items-center">
            <%= image_tag resource.avatar.url, class: "d-block ui-w-80" %>
            <div class="media-body ml-3">
              <label class="form-label d-block mb-2">Avatar</label>
              <label class="btn btn-outline-primary btn-sm">
                <%= f.file_field :avatar, as: :file, class: 'user-edit-fileinput' %>
              </label>&nbsp;
            </div>
          </div>

        </div>
        <hr class="border-light m-0">
        <div class="card-body pb-2">
          <div class="form-group">
            <label class="form-label">Email</label><br/>
            <% if current_user.is_admin %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            <% else %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control", disabled: true %>
            <% end %>
          </div>
          <div class="form-group">
            <label class="form-label">Username</label>
            <% if current_user.is_admin %>
              <%= f.text_field :username, class: "form-control" %>
            <% else %>
              <%= f.text_field :username, class: "form-control", disabled: true %>
            <% end %>
          </div>
          <div class="form-group">
            <label class="form-label">Passwort</label><i>(leer lassen falls es nicht geändert werden soll)</i><br/>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group">
            <label class="form-label">Passwort bestätigen</label><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group">
            <label class="form-label">Zur bestätigung aktuellen Passwort eingeben</label><br/>
            <%= f.password_field :current_password, class: 'form-control' %>
          </div>
        </div>

        </div>
        <div class="tab-pane fade" id="user-edit-info">

          <div class="card-body pb-2">

            <h6 class="mb-4">Stammdaten</h6>
            <div class="form-group">
              <label class="form-label">Vorname</label>
              <%= f.text_field :firstname, class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="form-label">Nachname</label>
              <%= f.text_field :lastname, class: "form-control" %>
            </div>
            <div class="form-group">
              <label class="form-label">Geburtsdatum</label>
              <%= f.date_field :dob, class: "form-control" %>
            </div>

          </div>
          <hr class="border-light m-0">
          <div class="card-body pb-2">

            <h6 class="mb-4">Social Media</h6>
            <div class="form-group">
              <label class="form-label">Skype</label>
              <%= f.text_field :skype, class: 'form-control' %>
            </div>

            <div class="form-group">
              <label class="form-label">Twitter</label>
              <%= f.text_field :twitter, class: 'form-control' %>
            </div>

            <div class="form-group">
              <label class="form-label">Instagram</label>
              <%= f.text_field :instagram, class: 'form-control' %>
            </div>

            <div class="form-group">
              <label class="form-label">Facebook</label>
              <%= f.text_field :facebook, class: 'form-control' %>
            </div>

          </div>
          <hr class="border-light m-0">
          <div class="card-body pb-2">

            <h6 class="mb-4">Kontaktmöglichkeiten</h6>
            <div class="form-group">
              <label class="form-label">Telefon</label>
              <%= f.text_field :phone, class: 'form-control' %>
            </div>

            <div class="form-group">
              <label class="form-label">Handy</label>
              <%= f.text_field :mobile, class: 'form-control' %>
            </div>

          </div>

        </div>

        <div class="tab-pane fade" id="notice">

          <div class="card-body pb-2">

            <div class="form-group">
              <%= f.text_area :notice, rows: '10', class: 'form-control' %>
            </div>
          </div>

        </div>
        </div>
        </div>

        <div class="text-right mt-3">
          <%= f.submit 'Speichern', class: 'btn btn-primary' %>&nbsp;
          <%= link_to 'Cancel', root_path, class: 'btn btn-default' %>
      <% end %>
      </div>
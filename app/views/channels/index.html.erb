<div class="card">
  <h6 class="card-header">
    Chatr√§ume <%= link_to 'New Chatroom', new_channel_path, class: 'btn btn-sm btn-success' %>
  </h6>
  <div class="card-datatable table-responsive">
    <table class="datatables-demo table table-striped table-bordered">
      <thead>
      <tr>
        <th>Name</th>
        <th>Nachrichten</th>
        <th>User</th>
        <th class="text-right">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.name %></td>
        <td><%= link_to "Go To Messages", channel_messages_path(channel) %></td>
        <%= channel.users.count %>
        <td class="text-right" >
          <%= link_to 'Show', channel_path(channel), class: 'btn btn-sm btn-info' %>
          <%= link_to 'Edit', edit_channel_path(channel), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
